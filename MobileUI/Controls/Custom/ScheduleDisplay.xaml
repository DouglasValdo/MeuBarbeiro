<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:Domain.Entities;assembly=Domain"
             x:DataType="model:Schedule"
             x:Class="MobileUI.Controls.Custom.ScheduleDisplay" BackgroundColor="Transparent" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <StackLayout Grid.RowSpan="2">
            <Label Text="{Binding ScheduleTask.Name}" FontSize="18" 
                   FontAttributes="Bold" TextColor="{StaticResource Gray600 }"/>
        </StackLayout>
        <StackLayout Grid.RowSpan="2" Grid.Column="1" Grid.Row="0">
            <Label Text="{Binding ScheduleTask.Price, StringFormat='{0}€'}" 
                   HorizontalTextAlignment="Center" VerticalTextAlignment="End" FontSize="30"
                   FontAttributes="Bold" TextColor="Black" Padding="0, 5, 0, 0"/>
        </StackLayout>
        <StackLayout Grid.Column="0" Grid.Row="1">
            <Label Text="{Binding TimeStamp, 
                            StringFormat='{0:MM-dd-yyyy HH:mm}'}"  FontAttributes="Bold"/>
        </StackLayout>
    </Grid>
</ContentView>